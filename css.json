/* Global Styles */
body {
    margin: 0;
    font-family: Arial, sans-serif;
    color: #333;
}

header {
    background-color: #ADD8E6; /* Light blue */
    padding: 10px;
    text-align: center;
}

nav ul {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: center;
}

nav ul li {
    margin: 0 15px;
}

nav ul li a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
}

#menu-toggle {
    display: none; /* Hidden on desktop */
    cursor: pointer;
    font-size: 24px;
}

main {
    padding: 20px;
    text-align: center;
}

footer {
    background-color: #ADD8E6;
    padding: 10px;
    text-align: center;
    position: fixed;
    width: 100%;
    bottom: 0;
}

/* Home Specific */
#home {
    background: linear-gradient(to bottom, #ADD8E6, white); /* Light blue to white */
    min-height: 80vh;
}

.hero img {
    max-width: 100%;
    height: auto;
}

.button {
    display: inline-block;
    background-color: #007BFF;
    color: white;
    padding: 10px 20px;
    margin: 10px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s, transform 0.3s;
}

.button:hover {
    background-color: #0056b3;
    transform: scale(1.05); /* Animation */
}

/* About Specific */
#about p {
    max-width: 600px;
    margin: 0 auto;
}

/* Services Specific */
.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
}

.service-card {
    background: #f9f9f9;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    animation: fadeIn 1s ease-in;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.service-card img {
    max-width: 100%;
    border-radius: 5px;
}

/* Gallery Specific */
.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 10px;
}

.gallery-grid img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
}

/* Responsive Design */
@media (max-width: 768px) {
    nav ul {
        display: none;
        flex-direction: column;
    }

    nav ul.active {
        display: flex;
    }

    #menu-toggle {
        display: block;
    }
}